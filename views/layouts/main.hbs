<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity=
        "sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
        crossorigin="anonymous"></script>
    <title>MetaMask Auth</title>
</head>
<body>
    <button id="ajaxTest">Ajax</button>
    <button id="fetchTest">Fetch</button>
    <script>
        $(document).ready(function () {
            $("#ajaxTest").click(function () {
                $.post("/request",
                    {
                        name: "viSion",
                        designation: "Professional gamer"
                    },
                    function (data, status) {
                        console.log(data);
                    });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#fetchTest").click(function () {
                const body = JSON.stringify({
                    name: "Atikin",
                    id: 5,
                });
                const headers = { 'Content-Type': 'application/json' };
                fetch('/fetch', { method: 'post', body, headers })
                .then(resp => {
                    if(resp.status < 200 || resp.status >= 300)
                        throw new Error('Запрос отклонен со статусом ${resp.status}');
                    return resp.json();
                })
                .then(json => {
                    console.log(json);
                })
                .catch(err => {
                    console.log(err);
                })
            });
        });
    </script>
</body>
</html>