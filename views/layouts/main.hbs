  <body class="bg-light">
    <div class="base-container container" id="create-container">
      <main id="main">
        <div class="py-5 container">

          <div class="progress-container">
            <div class="progress">
              <div
                class="progress-bar"
                role="progressbar"
                {{!-- aria-label="2px high" --}}
                {{!-- aria-valuenow="25"
                aria-valuemin="0"
                aria-valuemax="100" --}}
              ></div>
            </div>
            <div class="circle active">1</div>
            <div class="circle">2</div>
            <div class="circle">3</div>
            <div class="circle">4</div>
            <div class="circle">5</div>
          </div>

          <div class="state-names">
            <div class="name">Comment</div>
            <div class="name">Comment</div>
            <div class="name">Comment</div>
            <div class="name">Comment</div>
            <div class="name">Comment</div>
          </div>

        </div>

        <div class="row g-5 deal-details">
          <div id="inputBody" class="col-md-7">
            {{{body}}}
          </div>
          <div id="historyBody" class="col-md-5">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
              <span class="text-primary">History</span>
            </h4>

            <ul class="list-group mb-3" id="history-list">
              <li class="list-group-item d-flex justify-content-between lh-sm">
                <div class="history-div">
                  <h6
                    class="text-container my-0"
                  >0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266</h6>
                  <small class="text-muted">pending</small>
                </div>
                <span class="text-muted">0.1 ETH</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between bg-light"
              >
                <div class="history-div text-success">
                  <h6
                    class="text-container my-0"
                  >0x70997970C51812dc3A010C7d01b50e0d17dc79C8</h6>
                  <small class="text-muted">1 day ago</small>
                </div>
                <span class="text-success">0.005 ETH</span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span>Total (ETH)</span>
                <strong>0.105 ETH</strong>
              </li>
            </ul>

            <form class="card p-2" id="tmp">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Address" />
                <button type="submit" class="btn btn-secondary">Filter</button>
              </div>
            </form>

            <button
              id="answerCreate-btn"
              class="w-100 btn btn-primary btn-lg"
            >Update history</button>
          </div>

          <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div
              id="liveToast"
              class="toast"
              role="alert"
              aria-live="assertive"
              aria-atomic="true"
            >
              <div class="toast-body">
                <div
                  class="alert alert-success toast-body-div"
                  role="alert"
                  id="toast-msg"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
